<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.NewsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewNews"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="#D32F2F"

        app:cardCornerRadius="20dp" >

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:paddingBottom="150dp"
            android:text="@string/DiningHall"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/idIVLogo"
            android:layout_width="70dp"
            android:layout_height="85dp"
            android:layout_centerInParent="true"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            android:background="#D32F2F"
            app:itemIconTint="@drawable/selector"
            app:tint="#FFFFFF"
            android:src="@drawable/ic_baseline_dining_24" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/cardviewNews"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="#0DBED5"
            app:cardCornerRadius="20dp"
            app:contentPaddingLeft="20dp">
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:paddingBottom="150dp"
                android:text="@string/ring"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/idI5Logo"
                android:layout_width="70dp"
                android:layout_height="85dp"
                android:layout_centerInParent="true"
                android:layout_gravity="bottom|end"
                android:layout_margin="20dp"
                android:background="#0DBED5"
                app:tint="#FFFFFF"
                app:itemIconTint="@drawable/selector"
                android:src="@drawable/ic_baseline_directions_bus_filled_24" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="#03A9F4"
            app:cardCornerRadius="20dp"
            app:contentPaddingLeft="20dp" >
            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:paddingBottom="150dp"
                android:text="@string/gpa_calculator"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/idI6Logo"
                app:tint="#FFFFFF"
                android:layout_width="70dp"
                android:layout_height="85dp"
                android:layout_centerInParent="true"
                android:layout_gravity="bottom|end"
                android:layout_margin="20dp"
                android:background="#03A9F4"
                app:itemIconTint="@drawable/selector"
                android:src="@drawable/ic_baseline_calculate_24" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/linear1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="#989494"
            app:cardCornerRadius="20dp"
            app:contentPaddingLeft="20dp" >

            <TextView
                android:id="@+id/textView12"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:paddingBottom="120dp"
                android:text="@string/academic_calendar"
                android:textColor="#FFFFFF"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/idI7Logo"
                android:layout_width="70dp"
                android:layout_height="85dp"
                android:layout_centerInParent="true"
                android:layout_gravity="bottom|end"
                android:layout_margin="20dp"
                android:background="#989494"
                app:itemIconTint="@drawable/selector"
                android:src="@drawable/ic_baseline_calendar_month_24"
                app:tint="#FFFFFF" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="#9830AA"
            app:cardCornerRadius="20dp"
            app:contentPaddingLeft="20dp" >
            <TextView
                android:id="@+id/textView13"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:paddingBottom="120dp"
                android:text="@string/CampusMap"
                android:textColor="#FFFFFF"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/idI8Logo"
                android:layout_width="70dp"
                android:layout_height="85dp"
                android:layout_centerInParent="true"
                android:layout_gravity="bottom|end"
                android:layout_margin="20dp"
                android:background="#9830AA"
                app:itemIconTint="@drawable/selector"
                app:tint="#FFFFFF"
                android:src="@drawable/ic_baseline_map_24" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>