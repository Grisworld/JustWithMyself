<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.NewsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewNews"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="#D32F2F"

        app:cardCornerRadius="50dp" >

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:paddingBottom="150dp"
            android:text="@string/DiningHall"
            android:textColor="#FFF3E0"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/idIVLogo"
            android:layout_width="70dp"
            android:layout_height="85dp"
            android:layout_centerInParent="true"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            android:background="#D32F2F"
            app:itemIconTint="@drawable/selector"
            android:src="@drawable/ic_baseline_newspaper_24" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/cardviewNews"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="#0DBED5"
            app:cardCornerRadius="50dp"
            app:contentPaddingLeft="20dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="#03A9F4"
            app:cardCornerRadius="50dp"
            app:contentPaddingLeft="20dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/linear1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="#989494"
            app:cardCornerRadius="50dp"
            app:contentPaddingLeft="20dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="#9830AA"
            app:cardCornerRadius="50dp"
            app:contentPaddingLeft="20dp" />

    </LinearLayout>

</RelativeLayout>